<script>
  const texts = [
    "Happy Birthday ðŸŽ‰", "I <3 u", "Há»c giá»i hÆ¡n", "Sinh Nháº­t Vui Váº»ðŸŽ‰", "NgÃ´ ThÃºy Vy", "Báº¯p", 'Anh Tuáº¥n and Khoa VÄƒn chÃºc má»«ng sinh nháº­t bÃ©', "11/12/2008", 'Mau Äƒn chÃ³ng lá»›n',
  ];

  const stage = document.getElementById('stage');
  let spawnInterval = 150;
  let baseSpeed = 10;
  let baseSize = 20;

  

  
  
  
  

  const imageSources = [
  'vy1.jpg',
  'vy2.jpg',
  'vy3.jpg',
  'vy4.jpg',
  'vy5.jpg',
  'vy6.jpg',
  'vy7.jpg',
 
  ];

  function spawnText(){
    const el = document.createElement('div');
    el.className = 'falling glow';
    el.textContent = texts[Math.floor(Math.random()*texts.length)];
    const size = Math.round((Math.random()*18) + (baseSize-6));
    el.style.fontSize = size + 'px';
    el.style.left = (Math.random()*92)+'vw';
    const duration = (Math.random()*baseSpeed*0.8 + baseSpeed*0.6).toFixed(2);
    el.style.animation = `fall ${duration}s linear forwards`;
    stage.appendChild(el);
    setTimeout(()=> el.remove(), duration*1000+2000);
  }

  function spawnImage(){
    const el = document.createElement('img');
    el.className = 'falling avatar-img';
    el.src = imageSources[Math.floor(Math.random()*imageSources.length)];
    el.style.left = (Math.random()*92)+'vw';
    const duration = (Math.random()*5+3).toFixed(2);
    el.style.animation = `fall ${duration}s linear forwards`;
    stage.appendChild(el);
    setTimeout(()=> el.remove(), duration*1000+1500);
  }

  setInterval(()=> spawnText(), spawnInterval);
  setInterval(()=>{ if(Math.random()<0.35) spawnImage(); }, 1500);

</script>
